@page
@model Abyweb.Pages.Categories.EditModel
@{
}

<form method="post">
    <input hidden asp-for="mycategory.Id" />

    <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary pl-3">Edit Category</h2>
                <hr />
            </div>

            <div asp-validation-summary="All"></div>                   

            <div class="mb-3">
                <label asp-for="@Model.mycategory.Name">Name:</label><br />
                <input asp-for="@Model.mycategory.Name"/>
                 <span asp-validation-for="mycategory.Name" class="text-danger"></span>
            </div> 
            <div class="mb-3">
                <label asp-for="mycategory.DisplayOrder">Display Order:</label><br />
                <input asp-for="mycategory.DisplayOrder" />
                <span asp-validation-for="mycategory.DisplayOrder" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary" style="width:150px;">Update</button>           
            <a asp-page="Index" class="btn btn-secondary" style="width:150px">Back to List</a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}