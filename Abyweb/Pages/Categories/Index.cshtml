@page
@model Abyweb.Pages.Categories.IndexModel
@{
}
<partial name="_Notifications" />


<div class="container p-3">   

    <br />

    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="Create" class="btn btn-primary">
                <i class="bi bi-pencil-square"></i>&nbsp; Create a New Category
            </a>
        </div>
    </div>
       

    <table  class="table table-bordered table-striped" width="100%">
        <thead>
            <tr>
                <td>
                    Category Name
                </td>
                <td>
                    Dispaly Order
                </td>
                <td></td>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model.Categories)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.DisplayOrder
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-page="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
           
        </tbody>
    </table>

</div>